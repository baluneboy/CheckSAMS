<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!-- Use a fixed time zone -->
    <TextClock
        android:id="@+id/textclock"

        android:format12Hour="'GMT' yyyy-MM-dd  DOY / HH:mm:ss"
        android:format24Hour="'GMT' yyyy-MM-dd  DOY / HH:mm:ss"
        android:timeZone="GMT+0000"

        android:textColor="#ffdc6e00"
        android:textSize="20sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/indicatorRichTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mams_gse_for_ku_aos"
        android:layout_below="@+id/textclock"

        android:textColor="#ff0000ff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button1"
        android:text="@string/update"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/indicatorRichTextView"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:text="@string/details"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/button1"
        android:layout_alignParentEnd="true" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/button2" />

    <WebView
        android:id="@+id/webView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webView"
        android:layout_marginTop="8dp" />

</RelativeLayout>